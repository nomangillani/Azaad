<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.smarteist.autoimageslider.SliderLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:id="@+id/imageSlider"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Samantha summer"
                android:textSize="18dp"
                android:id="@+id/name"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/slidertext"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:layout_width="120dp"
                    android:layout_height="30dp"

                    android:id="@+id/connect"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/homeitembutton"

                    android:text="Connect" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/country"
                android:text="New york,USA"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ageandheight"
                android:text="26 years | 6.7 Feet"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bio"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:text="GSM (Global System for Mobile communication) is a digital mobile network that is widely used by mobile phone users in Europe and other parts of the world. "/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/brown"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <Button
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/homeitembutton"
                    android:text="Personal Info"
                    android:id="@+id/personalinfo"
                    android:textAllCaps="false"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/expectation"
                    android:textAllCaps="false"
                    android:background="@drawable/homeitembutton"
                    android:layout_marginLeft="10dp"
                    android:text="Expectation" />

            </LinearLayout>



        </LinearLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
